{
    "compilerOptions": {
        "target": "es2022",
        "module": "NodeNext",
        "resolveJsonModule": true,
        "moduleResolution": "NodeNext",
        "experimentalDecorators": true,
        "allowImportingTsExtensions": true,
        "jsx": "react-jsx",
        "noEmit": true,
        "allowJs": false,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "emitDecoratorMetadata": true,
        "typeRoots": ["./node_modules/@types", "js/types/materials.d.ts"]
    },
    "exclude": ["node_modules", "dist"],
    "include": [
        "./js/**/*.js",
        "./js/**/*.ts",
        "./js/**/*.tsx",
        "app.js",
        "js/types/materials.d.ts"
    ],
    "types": ["@types/**", "./types/**"]
}
